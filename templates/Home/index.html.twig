{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block headerTitle %}Accueil{% endblock %}
{% block presentation %}Bienvenue sur notre Blog !{% endblock %}

{% block body %}
    {# Affichage des trois articles #}
    {% for new in news %}
        <div>
            <h2>{{ new.title }}</h2>
            <div>
                <p>
                    Auteur : <i>{{ new.author.username }}</i>
                    <p>{{ new.description }}</p>
                </p>
            </div>
        </div>
    {% endfor %}
{% endblock %}