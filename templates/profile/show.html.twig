{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {% if app.user.id == user.id %}
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    {% if app.user.id == user.id %}
        {#<a href="{{ path('app_users_edit', {'id': user.id}) }}">Modifier</a>#}
        {{ include('profile/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
